---
import { formatBlogPosts, slugify } from "@/js/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { siteMetadata } from "@/data";
import PostCard from "@/components/PostCard.astro";

export async function getStaticPaths() {
  return [
    {
      params: { category: slugify("Docs") },
      props: { name: "Docs" },
    },
    {
      params: { category: slugify("Astro") },
      props: { name: "Astro" },
    },
    {
      params: { category: slugify("General") },
      props: { name: "General" },
    },
    {
      params: { category: slugify("CSS") },
      props: { name: "CSS" },
    },
  ];
}
const { category } = Astro.params;
const { name } = Astro.props;
const allPosts = await Astro.glob("../**/*.md");

const filteredPosts = formatBlogPosts(allPosts);
const categoryPosts = filteredPosts.filter(
  (post) => slugify(post.frontmatter.category) == slugify(category)
);
---

<BaseLayout title={`${name} - ${siteMetadata.title}`}>
  <section class="container" aria-label="New Blog Posts">
    <h1 class="h1">Posts about <span>{name}</span></h1>
    <div class="post-container">
      {
        categoryPosts.length > 0 &&
          categoryPosts.map((post) => (
            <PostCard
              frontmatter={post.frontmatter}
              tagType="h2"
              url={post.url}
            />
          ))
      }
    </div>
  </section>
</BaseLayout>
